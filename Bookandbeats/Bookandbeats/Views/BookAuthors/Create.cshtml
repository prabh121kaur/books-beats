@model BookandBeats.Models.BookAuthor

<h1>Create Book-Author Association</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="BookId" class="control-label"></label>
        <select asp-for="BookId" class="form-control" asp-items="@(new SelectList(ViewBag.Books, "BookId", "Title"))"></select>
        <span asp-validation-for="BookId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AuthorId" class="control-label"></label>
        <select asp-for="AuthorId" class="form-control" asp-items="@(new SelectList(ViewBag.Authors, "AuthorId", "FirstName"))"></select>
        <span asp-validation-for="AuthorId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
