@model BookandBeats.Models.BookAuthor

<h1>Delete Book-Author Association</h1>

<p>Are you sure you want to delete this association?</p>

<p><strong>Book Title:</strong> @Model.Book.Title</p>
<p><strong>Author Name:</strong> @Model.Author.FirstName @Model.Author.LastName</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="BookAuthorId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
