@model BookandBeats.Models.BookPlaylist

<h1>Delete Book Playlist</h1>

<p>Are you sure you want to delete this playlist?</p>

<p><strong>Book Title:</strong> @Model.Book.Title</p>
<p><strong>Playlist Name:</strong> @Model.Playlist.Name</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="BookPlaylistId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
