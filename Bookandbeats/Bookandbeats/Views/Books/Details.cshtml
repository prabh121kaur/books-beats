@model BookandBeats.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<h1>@Model.Title</h1>

<p>
    <strong>Genre:</strong> @Model.Genre?.Name
</p>

<p>
    <strong>Authors:</strong>
    @if (Model.BookAuthors != null && Model.BookAuthors.Any())
    {
        <ul>
            @foreach (var bookAuthor in Model.BookAuthors)
            {
                <li>@bookAuthor.Author.FirstName @bookAuthor.Author.LastName</li>
            }
        </ul>
    }
    else
    {
        <span>No authors listed.</span>
    }
</p>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.BookId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.BookId" class="btn btn-danger">Delete</a>
</p>
