@model BookandBeats.Models.Genre

@{
    ViewData["Title"] = "Genre Details";
}

<h1>@Model.Name</h1>

<p>
    <strong>Associated Books:</strong>
    @if (Model.Books != null && Model.Books.Any())
    {
        <ul>
            @foreach (var book in Model.Books)
            {
                <li>@book.Title</li>
            }
        </ul>
    }
    else
    {
        <span>No books associated with this genre.</span>
    }
</p>

<p>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    <a asp-action="Edit" asp-route-id="@Model.GenreId" class="btn btn-warning">Edit</a>
    <a asp-action="Delete" asp-route-id="@Model.GenreId" class="btn btn-danger">Delete</a>
</p>
