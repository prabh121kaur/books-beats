@model BookandBeats.Models.PlaylistSong

@{
    ViewData["Title"] = "Edit Playlist Song";
}

<h1>Edit Playlist Song</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="PlaylistId" />
    <input type="hidden" asp-for="SongId" />
    <div class="form-group">
        <label asp-for="Playlist.Name" class="form-label">Playlist</label>
        <input asp-for="Playlist.Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Song.Title" class="form-label">Song</label>
        <input asp-for="Song.Title" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
