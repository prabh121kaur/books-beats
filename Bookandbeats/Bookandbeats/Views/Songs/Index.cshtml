@model IEnumerable<BookandBeats.Models.Song>

@{
    ViewData["Title"] = "Songs";
}

<h1>Songs</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add New Song</a>
</p>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var song in Model)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.Artist</td>
                <td>
                    <a asp-action="Details" asp-route-id="@song.SongId" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@song.SongId" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@song.SongId" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
